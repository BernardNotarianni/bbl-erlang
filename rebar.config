{erl_opts, [debug_info]}.

{deps, [{cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "1.0.4"}}}
       ,{erlydtl, ".*", {git, "git://github.com/erlydtl/erlydtl", {branch, master}}}
       ]}.

{plugins, [{rebar3_erlydtl_plugin, ".*", {git, "https://github.com/tsloughter/rebar3_erlydtl_plugin.git", {branch, "master"}}}
          ]}.

{provider_hooks, [
                 {pre, [{compile, {erlydtl, compile}}]}
                 ]}.

{relx, [{release, {bbl, "0.0.1"}, [bbl]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.
